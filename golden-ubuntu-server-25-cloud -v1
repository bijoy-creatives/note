  virsh start golden-ubuntu-server-25.04-microservice
  virsh domifaddr golden-ubuntu-server-25.04-microservice
  virsh domiflist golden-ubuntu-server-25.04-microservice

  sudo virsh destroy golden-ubuntu-server-25.04-microservice 
  sudo virsh undefine golden-ubuntu-server-25.04-microservice

