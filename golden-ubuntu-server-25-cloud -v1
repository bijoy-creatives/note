sudo virt-install \
  --name golden-ubuntu-server-25.04-microservice \
  --ram 4096 \
  --vcpus 4 \
  --cpu host-model \
  --import \
  --disk path=/home/bijoy/vm-iso/ubuntu-25.04-server-cloudimg-amd64.img,format=qcow2,bus=virtio \
  --disk path=/home/bijoy/cloud-init/cloud-init.iso,device=cdrom,readonly=on \
  --os-variant ubuntu25.04 \
  --network bridge=br0 \
  --graphics vnc \
  --noautoconsole



